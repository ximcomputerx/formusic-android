<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_image"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@mipmap/play_page_default_cover"
            app:civ_border_color="#88000000"
            app:civ_border_width="5dp" />
    </LinearLayout>

    <com.ximcomputerx.formusic.util.lrcview.LrcView
        android:id="@+id/lrc_view_single"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        lrc:lrcAnimationDuration="1000"
        lrc:lrcCurrentTextColor="@color/white"
        lrc:lrcDividerHeight="10dp"
        lrc:lrcNormalTextColor="@color/white"
        lrc:lrcPadding="40dp"
        lrc:lrcTextSize="12sp" />
</LinearLayout>